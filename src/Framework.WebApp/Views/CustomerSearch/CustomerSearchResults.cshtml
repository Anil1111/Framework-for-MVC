@model System.Collections.Generic.IEnumerable<Framework.Entity.CustomerModel>

@using Framework.Entity

@if (Model.Count() > 0)
{
    <div class="row">
        <div class="table-respoinsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Nick Name</th>
                        <th>Birth Date</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (CustomerModel item in Model)
                {
                        <tr>
                            <td>
                                <a href="#" onclick="window.location.href='@Url.Action(CustomerController.SummaryAction, CustomerController.ControllerName, new { id = item.ID })'">
                                    @item.ID
                                </a>
                            </td>
                            <td>
                                <a href="#" onclick="window.location.href='@Url.Action(CustomerController.SummaryAction, CustomerController.ControllerName, new { id = item.ID })'">
                                    @item.FirstName
                                </a>
                            </td>
                            <td>
                                <a href="#" onclick="window.location.href='@Url.Action(CustomerController.SummaryAction, CustomerController.ControllerName, new { id = item.ID })'">
                                    @item.LastName
                                </a>
                            </td>
                            <td>
                                <a href="#" onclick="window.location.href='@Url.Action(CustomerController.SummaryAction, CustomerController.ControllerName, new { id = item.ID })'">
                                    @item.BirthDate.ToShortDateString()
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
<div class="row">
    <div class="col-xs-offset-1 col-xs-10 ">
        @if (ViewData.ModelState.IsValid == false)
        {
            @Html.ValidationSummary(false, "Action resulted in...", new { @class = "text-danger" })
        }
        else
        {
            @Html.Encode(TempData[CustomerController.SuccessMessageKey])
        }
    </div>
</div>
